<toolbar>
   <createContent>
      <content mimetype="text/plain" icon="plain-text" label="menu.create-content.text" itemid="cm:content"/>
      <content mimetype="text/html" icon="html" label="menu.create-content.html" itemid="cm:content"/>
      <content mimetype="text/xml" icon="xml" label="menu.create-content.xml" itemid="cm:content"/>
   </createContent>
   <actionSets>
      <actionSet id="default">
         <action type="action-link" id="onActionCopyTo" label="menu.selected-items.copy" />
         <action type="action-link" id="onActionSafeMoveTo" permission="edit" label="menu.selected-items.move" />
         <action type="action-link" id="onActionDelete" permission="delete" label="menu.selected-items.delete" />
         <action type="action-link" id="onActionManagePermissionsBasic" permission="permissions" label="menu.selected-items.manage-permissions" />
         <action type="action-link" id="onActionMarkForDelete" permission="markForDelete" label="menu.selected-items.mark-for-delete" />
         <action type="action-link" id="onActionRemoveDeleteMark" permission="removeDeleteMark" label="menu.selected-items.remove-delete-mark" />
         <action type="action-link" id="onActionMarkAsPerishable" permission="markAsPerishable" label="actions.document.mark-as-perishable" />
         <action type="action-link" id="onActionRemovePerishableMark" permission="removePerishableMark" label="actions.document.remove-perishable-mark" />
         <action type="action-link" id="onActionDeleteNow" permission="deleteNow" label="menu.selected-items.delete-now" />
         <action type="action-link" id="onActionUndoDelete" permission="undoDelete" label="menu.selected-items.undelete" />
      </actionSet>
   </actionSets>
</toolbar>
